<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        tools:context="a0817moact03c_2.a0817moact03c_02.DetallePeliculaActivity"
        android:background="#000000">


        <ImageButton

            android:id="@+id/imageViewDeLaPelicula"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"/>

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/fadMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/imageViewDeLaPelicula"
            app:fab_addButtonColorNormal="#e9f70000"
            android:layout_above="@+id/textViewDelGenero">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fadCompartir"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:fab_colorNormal="#e9f70000"
                android:src="@android:drawable/ic_menu_share" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fadFavoritos"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:fab_colorNormal="#e9f70000"
                android:src="@android:drawable/star_big_off" />


        </com.getbase.floatingactionbutton.FloatingActionsMenu>




        <TextView
            android:id="@+id/textViewDelTituloDeLaPelicula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Titulo de la pelicula"
            android:textColor="#ffffff"
            android:layout_below="@id/imageViewDeLaPelicula"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textViewDelGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Genero"
            android:textColor="#ffffff"
            android:layout_below="@id/textViewDelTituloDeLaPelicula"/>

        <TextView
            android:id="@+id/textViewDeLaDescripcionDeLaPelicula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Descripcion de la pelicula"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:textColor="#ffffff"
            android:layout_below="@id/textViewDelGenero"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewDePeliculasSugeridas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewDeLaDescripcionDeLaPelicula">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
</ScrollView>