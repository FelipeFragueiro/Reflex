<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="a0817moact03c_2.a0817moact03c_02.View.Fragments.DetalleActorFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/youtubeTrailerMovie"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#212121"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"/>



        <TextView
            android:id="@+id/textViewDelNombreDelActorDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Nombre del personaje"
            android:textColor="#ffffff"
            android:layout_below="@id/youtubeTrailerMovie"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textViewDelPersonajeActorDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Personaje"
            android:textColor="#ffffff"
            android:layout_below="@id/textViewDelNombreDelActorDetalle"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textViewDelCumpleañosDelActor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Birthday"
            android:textColor="#ffffff"
            android:layout_below="@id/textViewDelPersonajeActorDetalle"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textViewTambienConocidoPorActorDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_toRightOf="@id/textViewDelCumpleañosDelActor"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:text="Tambien Conocido Por"
            android:textColor="#ffffff"
            android:layout_below="@id/textViewDelPersonajeActorDetalle"/>

        <TextView
            android:id="@+id/textViewDeLaBiografiaDelActorDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Biografia Del Actor"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:textColor="#ffffff"
            android:layout_below="@id/textViewDelCumpleañosDelActor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actores Populares"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/textViewActoresPopulares"
            android:layout_below="@+id/textViewDeLaBiografiaDelActorDetalle"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewDePeliculasSugeridas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewActoresPopulares">

        </android.support.v7.widget.RecyclerView>



    </RelativeLayout>
</ScrollView>
