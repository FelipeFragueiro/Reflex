<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#212121"
    >
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00555555"
        android:outlineProvider="bounds"
        android:clipToPadding="false">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewTinder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        app:cardCornerRadius="4dp"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:layout_height="350dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:id="@+id/imageViewTinder"/>

    <TextView
        android:layout_toRightOf="@id/imageViewTinder"
        android:id="@+id/nameTindertextview"
        android:textSize="40sp"
        android:paddingLeft="20sp"
        android:textColor="@android:color/background_dark"
        android:background="@color/colorPrimary"
        android:gravity="center|left"
        tools:text="hello world"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
            <TextView
                android:id="@+id/textoFavoritos"
                android:layout_marginTop="20sp"
                android:textSize="20dp"
                android:layout_below="@+id/nameTindertextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mis top favoritos:"/>
    </RelativeLayout>


    </android.support.v7.widget.CardView>
    </LinearLayout>

</FrameLayout>