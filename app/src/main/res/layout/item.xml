<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#212121"
    >
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00555555"
        android:outlineProvider="bounds"
        android:clipToPadding="false">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewTinder"
        android:layout_width="300dp"

        android:layout_height="350dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        app:cardCornerRadius="4dp"
        android:elevation="2dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="246dp"
            android:scaleType="centerCrop"
            android:id="@+id/imageViewTinder"/>

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:layout_height="wrap_content">




    <TextView
        android:layout_above="@+id/textoFavoritos"
        android:id="@+id/nameTindertextview"
        android:textSize="20dp"
        android:textColor="@android:color/background_dark"

        android:gravity="center|left"
        tools:text="hello world"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
            <TextView
                android:id="@+id/textoFavoritos"
                android:textSize="17dp"
                android:textColor="#000"
                android:layout_above="@+id/textviewfavoritos1"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:text="Mi pelicula Favorita:"/>
            <TextView
                android:id="@+id/textviewfavoritos1"
               android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="3dp"
                android:textColor="#000"
                android:textSize="25dp"
                android:text="pelicula"/>




        </LinearLayout>


    </android.support.v7.widget.CardView>
    </LinearLayout>

</FrameLayout>