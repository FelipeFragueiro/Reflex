<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context="a0817moact03c_2.a0817moact03c_02.View.Fragments.DetalleSerieFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageButton

        android:id="@+id/imageViewDeLaSerieDetalle"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#212121"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/textViewDelTituloDeLaSerieDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Titulo de la pelicula"
        android:textColor="#ffffff"
        android:layout_below="@id/imageViewDeLaSerieDetalle"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/textViewDelGeneroDeLaSerieDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="Genero"
        android:textColor="#ffffff"
        android:layout_below="@id/textViewDelTituloDeLaSerieDetalle"/>

    <TextView
        android:id="@+id/textViewDeLaDescripcionDeLaSerieDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:text="Descripcion de la pelicula"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:textColor="#ffffff"
        android:layout_below="@id/textViewDelGeneroDeLaSerieDetalle"/>

</RelativeLayout>
